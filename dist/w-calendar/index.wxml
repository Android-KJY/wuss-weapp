<w-mask-shadow
 visible="{{ visible }}"
 maskCancel="{{ true }}"
 opacity=".7"
 zIndex="900"
 bindclose="handleClose"
/>
<view
 class="wuss-class wuss-calendar-container {{ visible ? 'calendar-modal-show' : ''}}"
 style="height: 80vh;"
 hover-class="none"
 hover-stop-propagation="false"
>
	<view
	 class="wuss-calendar-header"
	 hover-class="none"
	 hover-stop-propagation="false"
	>
		<view class="wuss-calendar-date-btn wuss-calendar-left-btn" catchtap="handleClose">
			取消
		</view>
		<view class="wuss-calendar-title wuss-calendar-centered">
			选择日期
		</view>
	</view>
	<view
	 class="wuss-calendar-week-content"
	 hover-class="none"
	 hover-stop-propagation="false"
	>
		<view class="wuss-calendar-week-list">
			<view class="wuss-calendar-row">
				<text
				 class="wuss-calendar-date-week"
				 style="width:calc((100vw / 7) - 10px);height:20px"
				 wx:for="{{weekStr}}"
				 wx:key="{{item}}"
				>
					<text wx:if="{{item !== '日' && item !== '六'}}">{{item}}</text>
				<text wx:if="{{item === '日' || item === '六'}}" class="week" >{{item}}</text>
				</text>
			</view>
		</view>
	</view>
	<scroll-view
	 class="wuss-calendar-month-content"
	 scroll-x="false"
	 scroll-y="true"
	 upper-threshold="50"
	 lower-threshold="50"
	 scroll-top="0"
	 scroll-left="0"
	 scroll-into-view=""
	 scroll-with-animation="true"
	 enable-back-to-top="true"
	 bindscrolltoupper=""
	 bindscrolltolower=""
	 bindscroll=""
	 style="height: calc(80vh - 84px);"
	>
		<view
		 wx:for="{{dateList}}"
		 wx:key="{{item.year+item.month}}"
		 wx:for-item="dateItem"
		 class="wuss-calendar-date-content"
		>
			<view class="wuss-calendar-date-year-month">{{dateItem.year}}年{{dateItem.month}}月</view>
			<view class="wuss-calendar-row" style="flex-wrap: wrap;margin:15rpx 0;">
				<view
				 class="wuss-calendar-date-day {{item.day<=0?'bgwhite':item.className}}"
				 style="width:calc((100vw / 7) - 10px);height:calc(100vw / 7);"
				 data-year="{{dateItem.year}}"
				 data-month="{{dateItem.month}}"
				 data-day="{{item.day}}"
				 data-index="{{index}}"
				 bindtap="onPressDate"
				 wx:for="{{dateItem.days}}"
				 wx:key="{{item.day}}"
				>
					<view class='wuss-calendar-item-days' wx:if="{{item.day >0}}">
						<text style='font-size:28rpx;'>{{item.day}}</text>
						<text class="wuss-calendar-item-days-text" wx:if="{{item.isStartDay}}">{{startDayText}}</text>
						<text class="wuss-calendar-item-days-text" wx:elif="{{item.isEndDay}}">{{endDayText}}</text>
						<text class="wuss-calendar-item-days-text" wx:elif="{{item.dateTextObj}}" >
							{{item.dateTextObj.text}}
						</text>
					</view>
				</view>
			</view>
		</view>
	</scroll-view>
</view>

